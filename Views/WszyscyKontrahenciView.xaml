<UserControl x:Class="FirmaMeble.Views.WszyscyKontrahenciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirmaMeble.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="810" Background="BlanchedAlmond">
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding List}"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id Kontrahenta"
                                    Binding="{Binding Path=IdKontrahenta}" />
                <DataGridTextColumn Header="Kod"
                                    Binding="{Binding Path=Kod}" />
                <DataGridTextColumn Header="Nazwa"
                                    Binding="{Binding Path=Nazwa}" />
                <DataGridTextColumn Header="Nip"
                                    Binding="{Binding Path=Nip}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
